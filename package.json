{
  "name": "remix-ecommerce",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "execute": "node --experimental-specifier-resolution=node --loader ./loader.js",
    "script": "npm run execute scripts/setup.ts",
    "icons": "npm run script scripts/icons.ts",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "db:gen": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "npm run script \"prisma db seed\" confirm",
    "db:studio": "npm run script \"prisma studio\"",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down db",
    "pretest:i": "npm run db:up && npx prisma migrate deploy",
    "test:i": "vitest run --config ./vitest.config.integration.ts",
    "posttest:i": "npm run db:down",
    "pretest:i:ui": "npm run db:up && npx prisma migrate deploy",
    "test:i:ui": "vitest run --config ./vitest.config.integration.ts --ui --api 9527",
    "posttest:i:ui": "npm run db:down"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@remix-run/node": "^2.6.0",
    "@remix-run/react": "^2.6.0",
    "@remix-run/serve": "^2.6.0",
    "clsx": "^2.1.0",
    "i18next": "^23.8.2",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-backend": "^2.4.3",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "remix-custom-routes": "^1.0.1",
    "remix-i18next": "^5.5.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@remix-run/dev": "^2.6.0",
    "@types/node": "^20.11.19",
    "@types/prompt": "^1.1.8",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@vitest/ui": "^1.3.0",
    "autoprefixer": "^10.4.17",
    "chalk": "^5.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^13.3.8",
    "node-html-parser": "^6.1.12",
    "postcss": "^8.4.33",
    "prisma": "^5.9.1",
    "prompt": "^1.3.0",
    "remix-development-tools": "^3.7.4",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  }
}
